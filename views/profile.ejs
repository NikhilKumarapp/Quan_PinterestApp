<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link rel="stylesheet" href="/stylesheets/profile.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body>
    <div class="containerghread">
        <div class="cardghread">
          <div class="profile-picture">
            <img src="https://i.pinimg.com/280x280_RS/fe/7d/ee/fe7deef834e1fafe56f8023ced803ca9.jpg" alt="Profile Picture">
          </div>
          <h2 class="name"><%=user.fullname%></h2>
          <h3 class="username">@<%=user.username%></h3>
          <p class="tagline"> Some tag line.</p>
          <p class="description">Some description.</p>
          <a href="/logout" class="button">Logout</a>
          <form action="/upload" method="post" enctype="multipart/form-data">
            <input type="text" name="imagecaption" placeholder="Some caption for post">
            <input type="file" name="file" />
            <input type="submit" class="btn int" value="Upload Image">
          </form>
        </div>
    </div>
    <div class="container">
      <div class="cards flex">
        <% user.posts.forEach(function(post){ %>
          <div class="card" style="width: 18rem;">
            <img src="/images/uploads/<%= post.image  %>" class="card-img-top" alt="...">
            <div class="card-body">
              <h5 class="card-title"><%= post.posttext  %></h5>
              <a href="#" class="btn btn-primary">Go somewhere</a>
            </div>
          </div>
       <% }) %>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>